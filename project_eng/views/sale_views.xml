<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Agregar analytic account en form y ocultarla de la linea-->
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">CUST VHING Add analytic account</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="analytic_account_id" attrs="{'required':1}"/>
            </xpath>
            <xpath expr="//field[@name='account_analytic_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
